FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package.json package-lock.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 5173

# Run dev server (accessible from outside container)
# Use --no-open to prevent trying to open browser in headless environment
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--no-open"]
